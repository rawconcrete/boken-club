<div class="row">
  <% skills.each do |skill| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-header <%= skill.safety_critical ? 'bg-danger text-white' : '' %>">
          <h5 class="card-title mb-0">
            <%= skill.name %>
            <% if skill.safety_critical %>
              <span class="badge bg-warning text-dark ms-2">Safety Critical</span>
            <% end %>
          </h5>
        </div>
        <div class="card-body d-flex flex-column">
          <div class="mb-2">
            <span class="badge bg-primary"><%= skill.difficulty.capitalize if skill.difficulty.present? %></span>
            <span class="badge bg-secondary"><%= skill.category.capitalize if skill.category.present? %></span>
          </div>
          <p class="card-text"><%= truncate(skill.details, length: 150) %></p>
          <!-- Learn More button positioned at the bottom of the card -->
          <%= link_to "Learn More", skill_path(skill), class: "btn btn-primary mt-auto btn-sm", data: { turbo_frame: "_top" } %>
        </div>
      </div>
    </div>
  <% end %>
  <% if skills.empty? %>
    <div class="col-12">
      <div class="alert alert-info">
        No skills found matching your criteria. Try adjusting your search filters.
      </div>
    </div>
  <% end %>
</div>
