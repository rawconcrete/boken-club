<h1>Search Results</h1>

<% if @locations.empty? %>
  <p>No locations found matching your search.</p>
<% else %>
  <h2>Locations</h2>
  <% @locations.each do |location| %>
    <div class="location">
      <h3><%= link_to location.name, location_path(location) %></h3>
      <p><%= location.details %></p>
    </div>
  <% end %>
<% end %>
