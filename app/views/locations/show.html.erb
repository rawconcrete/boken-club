<%# app/views/locations/show.html.erb %>
<div class="container">
  <h1><%= @location.name %></h1>
  <div class="row mt-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p><strong>City:</strong> <%= @location.city %></p>
          <p><strong>Prefecture:</strong> <%= @location.prefecture %></p>
          <p><strong>Adventure Type:</strong> <%= @location.adventure_name %></p>
          <p><strong>Details:</strong> <%= @location.details %></p>
          <% if @location.tips.present? %>
            <p><strong>Tips:</strong> <%= @location.tips %></p>
          <% end %>
          <% if @location.warnings.present? %>
            <p><strong>Warnings:</strong> <%= @location.warnings %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Available Adventures</h5>
          <% @location.adventures.each do |adventure| %>
            <div class="mb-3 p-3 border rounded">
              <h6 class="mb-2"><%= adventure.name %></h6>
              <p class="small mb-2"><%= adventure.details %></p>
              <%= link_to "View Adventure", adventure_path(adventure),
                  class: "btn btn-primary btn-sm",
                  data: { turbo_frame: "_top" } %>
              <%= link_to "Plan a Trip Here", new_travel_plan_path(location_id: @location.id),
                  class: "btn btn-primary mt-3",
                  data: { turbo_frame: "_top" } %>
              data: { turbo_frame: "_top" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
