<%# app/views/locations/show.html.erb %>
<div class="container">
  <h1 class="mb-4 text-white"><%= @location.name %></h1>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p><strong>City:</strong> <%= @location.city %></p>
          <p><strong>Prefecture:</strong> <%= @location.prefecture %></p>
          <p><strong>Adventure Type:</strong> <%= @location.adventures.map(&:name).join(", ") %></p>
          <p><strong>Details:</strong> <%= @location.details %></p>
          <% if @location.tips.present? %>
            <p><strong>Tips:</strong> <%= @location.tips %></p>
          <% end %>
          <% if @location.warnings.present? %>
            <p class="text-danger"><strong>Warnings:</strong> <%= @location.warnings %></p>
          <% end %>
          <% if @location.equipment.any? %>
            <h5 class="mt-4">Required Equipment</h5>
            <div class="row" data-controller="equipment-selection">
              <% @location.equipment.each do |item| %>
                <div class="col-md-6 mb-2">
                  <div class="d-flex align-items-center border rounded p-2">
                    <div class="form-check">
                      <input type="checkbox"
                             class="form-check-input"
                             id="equipment-<%= item.id %>"
                             data-action="equipment-selection#toggle"
                             data-equipment-selection-target="checkbox"
                             data-equipment-id="<%= item.id %>"
                             data-equipment-name="<%= item.name %>">
                      <label class="form-check-label" for="equipment-<%= item.id %>">
                        <strong><%= item.name %></strong>
                        <div class="small text-muted"><%= item.category %></div>
                      </label>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <%= link_to "Plan a Trip Here", new_travel_plan_path(location_id: @location.id),
              class: "btn btn-primary btn-sm flex-fill mt-3",
              data: { turbo_frame: "_top" } %>
          <%= link_to "Back", :back,
              class: "btn btn-primary btn-sm flex-fill mt-2",
              data: { turbo_frame: "_top" } %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="mb-3">Available Adventures</h5>
          <% @location.adventures.each do |adventure| %>
            <div class="mb-3 p-3 border rounded">
              <h6 class="mb-2"><%= adventure.name %></h6>
              <p class="small mb-3"><%= adventure.details %></p>
              <div class="d-flex gap-2">
                <%= link_to "View Adventure", adventure_path(adventure),
                    class: "btn btn-primary btn-sm flex-fill",
                    data: { turbo_frame: "_top" } %>
                <%= render 'shared/add_to_plan_button', item: adventure, item_type: 'adventure' %>
              </div>
            </div>
          <% end %>
          <% if @location.adventures.empty? %>
            <p class="text-muted">No adventures available for this location.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/add_to_plan_button', item: @location, item_type: 'location' %>
</div>