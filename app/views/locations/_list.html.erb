<%# app/views/locations/_list.html.erb %>
<div class="row">
  <% locations.each do |location| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= location.name %></h5>
          <p class="card-text"><%= location.city %>, <%= location.prefecture %></p>
          <%= link_to "View Details", location_path(location), class: "btn btn-primary", data: { turbo_frame: "_top" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
