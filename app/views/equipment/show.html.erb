<%# app/views/equipment/show.html.erb %>
<div class="container text-white">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="mb-4">
            <%= @equipment.name %>
            <span class="badge bg-secondary"><%= @equipment.category %></span>
          </h1>
          <div class="mb-4">
            <h5>Description</h5>
            <p class="lead"><%= @equipment.description %></p>
          </div>
          <% if user_signed_in? %>
            <div class="mb-4">
              <% if current_user.equipment.include?(@equipment) %>
                <div class="alert alert-success">
                  <i class="bi bi-check-circle"></i> This equipment is in your inventory
                  <%= button_to "Remove from My Equipment",
                      user_equipment_path(current_user.user_equipments.find_by(equipment: @equipment)),
                      method: :delete,
                      class: "btn btn-outline-danger mt-2" %>
                </div>
              <% else %>
                <%= button_to "Add to My Equipment",
                    user_equipments_path(equipment_id: @equipment.id),
                    class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
          <div class="row">
            <div class="col-md-6">
              <h5>Recommended for Adventures</h5>
              <% if @equipment.adventures.any? %>
                <ul class="list-group">
                  <% @equipment.adventures.each do |adventure| %>
                    <li class="list-group-item">
                      <%= link_to adventure.name, adventure_path(adventure) %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No adventure recommendations yet.</p>
              <% end %>
            </div>
            <div class="col-md-6">
              <h5>Used in Locations</h5>
              <% if @equipment.locations.any? %>
                <ul class="list-group">
                  <% @equipment.locations.each do |location| %>
                    <li class="list-group-item">
                      <%= link_to location.name, location_path(location) %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No location recommendations yet.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Related Equipment</h5>
          <% related_equipment = Equipment.where(category: @equipment.category)
                                        .where.not(id: @equipment.id)
                                        .limit(3) %>
          <% if related_equipment.any? %>
            <div class="list-group">
              <% related_equipment.each do |equipment| %>
                <%= link_to equipment.name, equipment_path(equipment),
                    class: "list-group-item list-group-item-action" %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No related equipment found.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
