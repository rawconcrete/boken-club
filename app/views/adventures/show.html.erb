<%# app/views/adventures/show.html.erb %>
<div class="container text-white">
  <h1><%= @adventure.name %></h1>
  <div class="row mt-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p><strong>Details:</strong> <%= @adventure.details %></p>
          <% if @adventure.tips.present? %>
            <p><strong>Tips:</strong> <%= @adventure.tips %></p>
          <% end %>
          <% if @adventure.warnings.present? %>
            <p><strong>Warnings:</strong> <%= @adventure.warnings %></p>
          <% end %>
          <% if @adventure.skills.present? %>
            <p><strong>Required Skills:</strong> <%= @adventure.skills %></p>
          <% end %>
          <% if @adventure.equipment.any? %>
            <h5 class="mt-4">Required Equipment</h5>
            <div class="row" data-controller="equipment-selection">
              <% @adventure.equipment.each do |item| %>
                <div class="col-md-6 mb-2">
                  <div class="d-flex align-items-center border rounded p-2">
                    <div class="form-check flex-grow-1">
                      <input type="checkbox"
                             class="form-check-input"
                             id="equipment-<%= item.id %>"
                             data-action="equipment-selection#toggle"
                             data-equipment-selection-target="checkbox"
                             data-equipment-id="<%= item.id %>"
                             data-equipment-name="<%= item.name %>">
                      <label class="form-check-label" for="equipment-<%= item.id %>">
                        <strong><%= item.name %></strong>
                        <div class="small text-muted"><%= item.category %></div>
                      </label>
                    </div>
                    <% if user_signed_in? && current_user.equipment.include?(item) %>
                      <span class="badge bg-success ms-2">âœ“ Owned</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "Plan This Adventure",
                new_travel_plan_path(
                  adventure_id: @adventure.id,
                  equipment_ids: selected_equipment_ids
                ),
                class: "btn btn-primary mt-3",
                data: {
                  turbo_frame: "_top",
                  equipment_selection_target: "planButton"
                } %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Available Locations</h5>
          <% @adventure.locations.each do |location| %>
            <div class="mb-3 p-3 border rounded">
              <h6 class="mb-2"><%= location.name %></h6>
              <p class="small mb-2"><%= location.city %>, <%= location.prefecture %></p>
              <%= link_to "View Location", location_path(location),
                  class: "btn btn-primary btn-sm",
                  data: { turbo_frame: "_top" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
