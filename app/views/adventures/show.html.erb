<%# app/views/adventures/show.html.erb %>
<div class="container text-white">
  <h1><%= @adventure.name %></h1>
  <div class="row mt-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p><strong>Details:</strong> <%= @adventure.details %></p>
          <% if @adventure.tips.present? %>
            <p><strong>Tips:</strong> <%= @adventure.tips %></p>
          <% end %>
          <% if @adventure.warnings.present? %>
            <p><strong>Warnings:</strong> <%= @adventure.warnings %></p>
          <% end %>
          <% if @adventure.skills.present? %>
            <p><strong>Required Skills:</strong> <%= @adventure.skills %></p>
          <% end %>
          <% if @adventure.equipment.any? %>
            <h5 class="mt-4">Recommended Equipment</h5>
            <div class="row">
              <% @adventure.equipment.each do |item| %>
                <div class="col-md-6 mb-2">
                  <div class="d-flex align-items-center border rounded p-2">
                    <div>
                      <strong><%= item.name %></strong>
                      <div class="small text-muted"><%= item.category %></div>
                    </div>
                    <%= render 'shared/add_to_plan_button', item: item, item_type: 'equipment' %>
                    <% if user_signed_in? && current_user.equipment.include?(item) %>
                      <span class="badge bg-success ms-auto">âœ“ Owned</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "Plan This Adventure", new_travel_plan_path(adventure_id: @adventure.id),
                class: "btn btn-primary mt-3",
                data: { turbo_frame: "_top" } %>
            <%= link_to "Back", :back,
                class: "btn btn-primary mt-3",
                data: { turbo_frame: "_top" } %>
            <%= render 'shared/add_to_plan_button', item: @adventure, item_type: 'adventure' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Available Locations</h5>
          <% @adventure.locations.each do |location| %>
            <div class="mb-3 p-3 border rounded">
              <h6 class="mb-2"><%= location.name %></h6>
              <p class="small mb-2"><%= location.city %>, <%= location.prefecture %></p>
              <div class="d-flex gap-2">
                <%= link_to "View Location", location_path(location),
                    class: "btn btn-primary btn-sm",
                    data: { turbo_frame: "_top" } %>
                <%= render 'shared/add_to_plan_button', item: location, item_type: 'location' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
