<%# app/views/adventures/_list.html.erb %>
<div class="row">
  <% adventures.each do |adventure| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= adventure.name %></h5>
          <p class="card-text"><%= adventure.details %></p>
        </div>

        <% if adventure.image.attached? %>
          <%= image_tag adventure.image, class: "card-img-top adventure-image" %>
        <% else %>
          <% placeholder_image = case adventure.name.downcase.strip %>
            <% when "hiking" then "hiking.png" %>
            <% when "camping" then "camping.png" %>
            <% when "caving" then "caving.png" %>
            <% when "cycling" then "cycling.png" %>
            <% when "fishing" then "fishing.png" %>
            <% when "kayaking" then "kayaking.png" %>
            <% when "paragliding" then "paragliding.png" %>
            <% when "rafting" then "rafting.png" %>
            <% when "rock climbing" then "rock-climbing.png" %>
            <% when "skiing & snowboarding" then "skiingandsnowboarding.png" %>
            <% when "snowshoeing" then "snowshowing.png" %>
            <% when "star gazing" then "stargazing.png" %>
            <% when "trail running" then "trail_running.png" %>
            <% when "trekking" then "trekking.png" %>
            <% when "wildlife watching" then "wildlifewatching.png" %>
            <% else "placeholder.jpg" %>
          <% end %>
          <%= image_tag asset_path(placeholder_image), class: "card-img-top adventure-image" %>
        <% end %>

        <div class="card-body">
          <%= link_to "View Details", adventure_path(adventure), class: "btn btn-primary", data: { turbo_frame: "_top" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
