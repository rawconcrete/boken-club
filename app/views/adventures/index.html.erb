<div class="container">
  <h1>Adventures</h1>
  <%= form_with url: search_adventures_path, method: :get, local: true do %>
    <div class="search-bar mb-4">
      <select name="adventure" class="form-select">
        <option value="">Select Adventure Type</option>
        <% @adventures.each do |adventure| %>
          <option value="<%= adventure.name %>"><%= adventure.name %></option>
        <% end %>
      </select>
      <%= submit_tag "Search", class: "btn btn-primary ms-2" %>
    </div>
  <% end %>
  <div class="row">
    <% @adventures.each do |adventure| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= adventure.name %></h5>
            <p class="card-text"><%= adventure.details %></p>
            <%= link_to "View Details", adventure_path(adventure), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
