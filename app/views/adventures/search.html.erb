<h1>Search for Adventures</h1>
<%= form_with url: search_adventures_path, method: :get, local: true do %>
  <div class="search-bar">
    <select name="adventure">
      <option value="">Select Adventure</option>
      <% @adventures.each do |adventure| %>
        <option value="<%= adventure %>"><%= adventure %></option>
      <% end %>
    </select>
    <%= submit_tag "Search" %>
  </div>
<% end %>
<% if @locations.present? %>
  <h2>Recommended Locations</h2>
  <ul>
    <% @locations.each do |location| %>
      <li><%= location.name %> - <%= location.city %></li>
    <% end %>
  </ul>
<% else %>
  <p>No locations found for this adventure.</p>
<% end %>
