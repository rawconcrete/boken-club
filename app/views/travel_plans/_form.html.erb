<%# app/views/travel_plans/_form.html.erb %>
<div class="container"
     data-controller="travel-plan"
     data-travel-plan-locations-value="<%= travel_plan.locations.to_json %>"
     data-travel-plan-adventures-value="<%= travel_plan.adventures.to_json %>"
     data-travel-plan-equipment-value="<%= travel_plan.equipment.to_json %>">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: travel_plan, local: true) do |f| %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Plan Details</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :title, class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :content, class: "form-label" %>
              <%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :status, class: "form-label" %>
              <%= f.select :status, [['Pending', 'pending'], ['Completed', 'completed'], ['Cancelled', 'cancelled']], { selected: travel_plan.status }, class: "form-control" %>
            </div>
          </div>
        </div>
        <%# equpiment portion %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Equipment Needed</h5>
          </div>
          <div class="card-body">
            <div class="selected-items mb-3">
              <% travel_plan.equipment.each do |item| %>
                <div class="badge bg-primary p-2 m-1 d-inline-flex align-items-center">
                  <%= item.name %>
                  <button type="button" class="btn-close ms-2"
                  data-action="click->travel-plan#removeEquipment"
                    data-equipment-id="<%= item.id %>"></button>
                  <input type="hidden" name="travel_plan[equipment_ids][]" value="<%= item.id %>">
                </div>
              <% end %>
            </div>
            <div data-travel-plan-target="selectedEquipment"></div>
            <% Equipment.all.each do |equipment| %>
              <div class="form-check">
                <%= check_box_tag "travel_plan[equipment_ids][]", equipment.id,
            travel_plan.equipment_ids.include?(equipment.id),
            id: "equipment_#{equipment.id}",
            class: "form-check-input" %>
                <%= label_tag "equipment_#{equipment.id}", equipment.name, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
        </div>
        <%# end up equipment portion  %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Locations</h5>
          </div>
          <div class="card-body">
            <div data-travel-plan-target="selectedLocations" class="mb-3"></div>
            <input type="text"
                   class="form-control"
                   placeholder="Search locations..."
                   data-travel-plan-target="locationSearch"
                   data-action="input->travel-plan#searchLocations">
            <div data-travel-plan-target="locationResults" class="list-group mt-2"></div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Available Adventures</h5>
          </div>
          <div class="card-body">
            <div data-travel-plan-target="selectedAdventures" class="mb-3"></div>
            <div data-travel-plan-target="adventureResults" class="list-group mt-2"></div>
          </div>
        </div>
        <div class="d-flex justify-content-end gap-2">
          <%= link_to 'Cancel', :back, class: "btn btn-secondary" %>
          <%= f.submit 'Save', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
