<%# app/views/travel_plans/_form.html.erb %>
<%# Debugging: Show what is being pre-loaded into the form %>
<p>Loaded Equipment from Travel Plan:</p>
<ul>
  <% travel_plan.equipment.each do |item| %>
    <li><%= item.name %> (ID: <%= item.id %>)</li>
  <% end %>
</ul>
<p>LocalStorage Selected Equipment:</p>
<ul id="debug-storage"></ul>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    let storedEquipment = JSON.parse(localStorage.getItem("selectedEquipment") || "[]");
    let debugList = document.getElementById("debug-storage");
    storedEquipment.forEach(item => {
      let li = document.createElement("li");
      li.innerText = `${item.name} (ID: ${item.id})`;
      debugList.appendChild(li);
    });
  });
</script>
<div class="container"
     data-controller="travel-plan"
     data-travel-plan-locations-value="<%= travel_plan.locations.to_json %>"
     data-travel-plan-adventures-value="<%= travel_plan.adventures.to_json %>"
     data-travel-plan-equipment-value="<%= travel_plan.equipment.to_json %>">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: travel_plan, local: true) do |f| %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Plan Details</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :title, class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :content, class: "form-label" %>
              <%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :status, class: "form-label" %>
              <%= f.select :status, [['Pending', 'pending'], ['Completed', 'completed'], ['Cancelled', 'cancelled']], { selected: travel_plan.status }, class: "form-control" %>
            </div>
          </div>
        </div>
        <%# equpiment portion %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Equipment Needed</h5>
          </div>
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Equipment Needed</h5>
            </div>
            <div class="card-body">
              <div class="card mb-4">
                <div class="card-header">
                  <h5 class="mb-0">Equipment Needed</h5>
                </div>
                <div class="card-body" data-controller="equipment-selection">
                  <% Equipment.all.each do |item| %>
                    <div class="form-check">
                      <input type="checkbox"
                              class="form-check-input"
                              id="equipment_<%= item.id %>"
                              name="travel_plan[equipment_ids][]"
                              value="<%= item.id %>"
                              data-action="change->equipment-selection#toggle"
                      data-equipment-id="<%= item.id %>"
                      data-equipment-name="<%= item.name %>"
                      <%= 'checked' if travel_plan.equipment.include?(item) %>>
                      <label for="equipment_<%= item.id %>" class="form-check-label">
                        <%= item.name %>
                      </label>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <%# end up equipment portion  %>
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Locations</h5>
            </div>
            <div class="card-body">
              <div data-travel-plan-target="selectedLocations" class="mb-3"></div>
              <input type="text"
                   class="form-control"
                   placeholder="Search locations..."
                   data-travel-plan-target="locationSearch"
                   data-action="input->travel-plan#searchLocations">
              <div data-travel-plan-target="locationResults" class="list-group mt-2"></div>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Available Adventures</h5>
            </div>
            <div class="card-body">
              <div data-travel-plan-target="selectedAdventures" class="mb-3"></div>
              <div data-travel-plan-target="adventureResults" class="list-group mt-2"></div>
            </div>
          </div>
          <div class="d-flex justify-content-end gap-2">
            <%= link_to 'Cancel', :back, class: "btn btn-secondary" %>
            <%= f.submit 'Save', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
