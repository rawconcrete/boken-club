<h1>New Travel Plan</h1>
<%= form_with(model: @travel_plan, local: true) do |form| %>
  <div class="field">
    <%= form.label :name, "Travel Plan Name" %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :location_id, "Location" %>
    <%= form.collection_select(:location_id, Location.all, :id, :name, { prompt: "Select a location" }, { class: "form-control" }) %>
  </div>
  <div class="field">
    <%= form.label :adventure_ids, "Adventures" %>
    <%= form.collection_check_boxes(:adventure_ids, Adventure.all, :id, :name) %>
  </div>
  <div class="field">
    <%= form.label :details_ids, "Details (Equipment, Skills, Tips, Warnings)" %>
    <%= form.collection_check_boxes(:details_ids, Detail.all, :id, :name) %>
  </div>
  <div class="field">
    <%= form.label :shared, "Share this plan?" %>
    <%= form.check_box :shared %>
  </div>
  <div class="actions">
    <%= form.submit "Create Travel Plan", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back to Travel Plans', travel_plans_path, class: "btn btn-secondary" %>
