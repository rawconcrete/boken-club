<%# app/views/travel_plans/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">My Travel Plans</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @travel_plans.each do |plan| %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold mb-3"><%= plan.title %></h2>
        <div class="mb-4">
          <p class="text-gray-600"><%= plan.content %></p>
          <p class="mt-2">
            <span class="font-medium">Status:</span>
            <span class="px-2 py-1 rounded text-sm
              <%= case plan.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'cancelled' then 'bg-red-100 text-red-800'
                  end %>">
              <%= plan.status.capitalize %>
            </span>
          </p>
        </div>
        <div class="mb-4">
          <p><strong>Location:</strong> <%= plan.location.name %></p>
          <p><strong>Adventure:</strong> <%= plan.adventure.name %></p>
        </div>
        <%= link_to "View Details", travel_plan_path(plan),
            class: "inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
  <% if @travel_plans.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-600">You haven't created any travel plans yet.</p>
      <%= link_to "Explore Locations", locations_path,
          class: "mt-4 inline-block bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
<%# comment for push %>
