<%# app/views/travel_plans/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">My Travel Plans</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @travel_plans.each do |plan| %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold mb-3"><%= plan.title %></h2>
        <div class="mb-4">
          <p class="text-gray-600"><%= plan.content %></p>
          <p class="mt-2">
            <span class="font-medium">Status:</span>
            <span class="px-2 py-1 rounded text-sm
              <%= case plan.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'cancelled' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= plan.status&.capitalize || 'Not Set' %>
            </span>
          </p>
        </div>
        <div class="mb-4">
          <p><strong>Locations:</strong> <%= plan.locations.map(&:name).join(", ") %></p>
          <p><strong>Adventures:</strong> <%= plan.adventures.map(&:name).join(", ") %></p>
        </div>
        <div class="grid grid-cols-3 gap-2">
          <%= link_to travel_plan_path(plan),
              class: "block text-center bg-blue-100 text-blue-800 font-semibold px-4 py-2 rounded border border-blue-200 hover:bg-blue-200" do %>
            View Details
          <% end %>
          <%= link_to edit_travel_plan_path(plan),
              class: "block text-center bg-amber-100 text-amber-800 font-semibold px-4 py-2 rounded border border-amber-200 hover:bg-amber-200" do %>
            Edit
          <% end %>
          <%= button_to travel_plan_path(plan), method: :delete,
              class: "w-full bg-red-100 text-red-800 font-semibold px-4 py-2 rounded border border-red-200 hover:bg-red-200",
              data: { turbo_confirm: "Are you sure?" } do %>
            Delete
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
