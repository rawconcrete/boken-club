<%# app/views/travel_plans/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">My Travel Plans</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @travel_plans.each do |plan| %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold mb-3"><%= plan.title %></h2>
        <div class="mb-4">
          <p class="text-gray-600"><%= plan.content %></p>
          <p class="mt-2">
            <span class="font-medium">Status:</span>
            <span class="px-2 py-1 rounded text-sm
              <%= case plan.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'cancelled' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= plan.status&.capitalize || 'Not Set' %>
            </span>
          </p>
        </div>
        <div class="mb-4">
          <p><strong>Locations:</strong> <%= plan.locations.map(&:name).join(", ") %></p>
          <p><strong>Adventures:</strong> <%= plan.adventures.map(&:name).join(", ") %></p>
        </div>
        <div class="grid grid-cols-3 gap-2">
          <%= link_to "View Details", travel_plan_path(plan),
              class: "block text-center bg-blue-600 text-white font-medium px-4 py-2 rounded hover:bg-blue-700" %>
          <%= link_to "Edit", edit_travel_plan_path(plan),
              class: "block text-center bg-yellow-600 text-white font-medium px-4 py-2 rounded hover:bg-yellow-700" %>
          <%= button_to "Delete", travel_plan_path(plan), method: :delete,
              class: "w-full bg-red-600 text-white font-medium px-4 py-2 rounded hover:bg-red-700",
              data: { turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
  <% if @travel_plans.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-600">You haven't created any travel plans yet.</p>
      <%= link_to "Explore Locations", locations_path,
          class: "mt-4 inline-block bg-blue-600 text-white font-medium px-6 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
