<div style="max-width: 900px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif;">
  <h1 style="font-size: 24px; font-weight: bold; margin-bottom: 20px;">My Travel Plans</h1>
  <div style="display: flex; flex-wrap: wrap; gap: 20px;">
    <% @travel_plans.each do |plan| %>
      <div style="background: white; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); padding: 16px; width: calc(33.333% - 20px); min-width: 250px;">
        <h2 style="font-size: 18px; font-weight: bold; margin-bottom: 10px;"><%= plan.title %></h2>
        <p style="color: #555; margin-bottom: 10px;"><%= plan.content %></p>
        <p style="margin-bottom: 10px;">
          <strong>Status:</strong>
          <span style="padding: 5px 10px; border-radius: 5px; font-size: 14px;
            <%= case plan.status
              when 'pending' then 'background: #fff3cd; color: #856404;'
              when 'completed' then 'background: #d4edda; color: #155724;'
              when 'cancelled' then 'background: #f8d7da; color: #721c24;'
              else 'background: #e2e3e5; color: #6c757d;'
            end %>">
            <%= plan.status&.capitalize || 'Not Set' %>
          </span>
        </p>
        <p><strong>Locations:</strong> <%= plan.locations.map(&:name).join(", ") %></p>
        <p><strong>Adventures:</strong> <%= plan.adventures.map(&:name).join(", ") %></p>
        <div style="display: flex; justify-content: center; gap: 10px; margin-top: 15px;">
          <%= link_to "View Details", travel_plan_path(plan),
              style: "background: #007bff; color: white; padding: 8px 16px; border-radius: 5px; text-decoration: none; font-size: 14px; border: 1px solid #0056b3;" %>
          <%= link_to "Edit", edit_travel_plan_path(plan),
              style: "background: #ffc107; color: #212529; padding: 8px 16px; border-radius: 5px; text-decoration: none; font-size: 14px; border: 1px solid #d39e00;" %>
          <%= button_to "Delete", travel_plan_path(plan), method: :delete,
              style: "background: #dc3545; color: white; padding: 8px 16px; border-radius: 5px; border: 1px solid #bd2130; font-size: 14px; cursor: pointer;",
              data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
