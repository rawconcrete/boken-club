<!-- app/views/admin/admin/dashboard.html.erb -->
<div class="dashboard-container">
  <h1 class="dashboard-title">Admin Dashboard</h1>
  <div class="dashboard-cards">
    <!-- Locations Section -->
    <div class="card">
      <h2 class="card-title">Locations</h2>
      <% if @locations.any? %>
        <ul class="list">
          <% @locations.each do |location| %>
            <li class="list-item">
              <%= location.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No locations available.</p>
      <% end %>
    </div>
    <!-- Adventures Section -->
    <div class="card">
      <h2 class="card-title">Adventures</h2>
      <% if @adventures.any? %>
        <ul class="list">
          <% @adventures.each do |adventure| %>
            <li class="list-item">
              <%= adventure.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No adventures available.</p>
      <% end %>
    </div>
    <%# skills section %>
    <div class="col-md-3 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-book fa-3x mb-3 text-primary"></i>
          <h5 class="card-title">Skills</h5>
          <p class="card-text">Manage outdoor skills information</p>
          <h6 class="font-weight-bold"><%= Skill.count %> Skills</h6>
          <%= link_to "Manage Skills", admin_skills_path, class: "btn btn-primary mt-3" %>
        </div>
      </div>
    </div>
    <%# skills section end %>
  </div>
</div>
